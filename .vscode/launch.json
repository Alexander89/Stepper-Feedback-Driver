{
    "configurations": [
        {
            "name": "Remote debug",
            "type": "gdb",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "target": "${workspaceRoot}/target/thumbv6m-none-eabi/debug/stepper",
            "gdbpath": "arm-none-eabi-gdb",
            "autorun": [
                "source -v debug.gdb",
            ]
        }
    ]
}